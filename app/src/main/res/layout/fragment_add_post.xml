<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262420"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".AddPostFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Title :"
                android:textColor="#FAFAFA"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="383dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_addpost_bck"
                android:ems="10"
                android:hint="   Title . . . ."
                android:inputType="text"
                android:paddingStart="15dp"
                android:textColor="#FFFDFD"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="Choose a photo for your post :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_post"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:paddingRight="300dp"
                app:srcCompat="@drawable/blank_image_icon" />


            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/et_addpost_bck"
                android:ems="10"
                android:gravity="start"
                android:hint="What you want to post . . . "
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD post"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>