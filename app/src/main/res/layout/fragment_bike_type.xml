<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262420"
    android:orientation="vertical"
    tools:context=".BikeTypeFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:text="Choose a bike:"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="70dp"
        android:text="Manufacturer:"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/sp_manufacturer"
        android:layout_width="199dp"
        android:layout_height="36dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/sp_background"
        android:backgroundTint="#F8F6F6"
        android:dropDownWidth="wrap_content"
        android:dropDownSelector="@drawable/drop"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textView3"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Model:"
        android:textSize="25sp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="50dp"
        />
    <Spinner
        android:id="@+id/sp_type"
        android:layout_width="199dp"
        android:layout_height="36dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/sp_background"
        android:backgroundTint="#F8F6F6"
        android:spinnerMode="dropdown" />
    <TextView
        android:id="@+id/textView4"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Year:"
        android:textSize="25sp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="50dp"
        />

    <NumberPicker
        android:id="@+id/np_year"
        android:layout_width="98dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"

        />

    <Button
        android:id="@+id/btn_Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FFFFFE"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Create account" />


</LinearLayout>